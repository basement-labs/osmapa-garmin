highway=cycleway {add access = no; add bicycle = yes; add foot = yes} [0x0d road_class=0 road_speed=1 resolution 23]


# nie renderujemy na poziomie 22 trackow krotszych niz 100m
highway=track & tracktype ~ 'grade[3-6]' & length() > 100 [0x0e road_class=0 road_speed=1 resolution 22]
highway=track & tracktype ~ 'grade[3-6]'  [0x0e road_class=0 road_speed=1 resolution 23]

highway=track & length()>100  [0x0a road_class=0 road_speed=1 resolution 22]
highway=track  [0x0a road_class=0 road_speed=1 resolution 23]

highway=unsurfaced & length() > 100 [0x0a road_class=0 road_speed=1 resolution 22]
highway=unsurfaced [0x0a road_class=0 road_speed=1 resolution 23]


# Mop up any unrecognised highway types
highway=* & area!=yes & highway!=construction & construction!=* & highway!=proposed [0x07 road_class=0 road_speed=0 resolution 22]

natural=coastline [0x15 resolution 15]
power=line [0x29 resolution 24]


#KOLEJ, METRO, PROMY

#ROGAL zamieniamy 0x0a (track) spowrotem na tory //edit: dodajemy nowy typ drogi
#railway=abandoned [0x14 road_class=0 road_speed=1 resolution 22]
railway=abandoned [0x11016  resolution 24]

railway=light_rail & !(tunnel=yes) [0x14 resolution 22]
railway=narrow_gauge & !(tunnel=yes) [0x14 resolution 22]
railway=preserved & !(tunnel=yes) [0x14 resolution 22]

#jakis bug w garminach, zakresy sie jebia przy torach

#za pomoca length wycinamy rozne bocznice. Bocznice zazwyczaj tez nie maja layer albo name
railway=rail & !(tunnel=yes) & (length() > 1000 | name=* | layer=*) [0x11015 resolution 20-20 continue]

railway=rail & !(tunnel=yes) [0x11015 resolution 22-21 continue]
railway=rail & !(tunnel=yes) [0x11015 resolution 23-23 continue]
railway=rail & !(tunnel=yes) [0x14 resolution 24-24 continue]

#railway=rail & tunnel=yes   [0x10103 resolution 23]


