#DROGI INNE

highway=minor [0x06 road_class=1 road_speed=3 resolution 20]


# podstawa komunikacji na terenach odludnych sa wlasnie tego typu drogi

highway=unclassified {set mkgmap:no_name=yes} [0x11012 resolution 21-18 continue]
highway=unclassified {set mkgmap:no_name=yes} [0x11014 resolution 23-22 continue]
highway=unclassified [0x06 road_class=0 road_speed=3 resolution 24]

highway=road {set mkgmap:no_name=yes}[0x11012 resolution 21-18 continue]
highway=road {set mkgmap:no_name=yes} [0x11014  resolution 23-22 continue]
highway=road   { add mkgmap:dead-end-check = false} [0x06 road_class=0 road_speed=1  resolution 24]


