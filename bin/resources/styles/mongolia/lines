# TUNELE 

#wszystkie drogi poza chodnikami

highway=* & highway!=proposed & highway!=construction & highway!=footway & highway!=path & highway!=pedestrian & tunnel=yes [0x10103 resolution 22 continue]

#chodniki renderujemy tylko na level 24

(highway=footway | (highway=pedestrian & area!=yes) | highway=path) & tunnel=yes  [0x10103 resolution 24 continue]



# MOSTY  

(highway=motorway | highway=trunk | highway=primary | highway=secondary) & bridge=yes [0x10101 resolution 22 continue]        

# AUTOSTRADY
highway=motorway {name '${ref|highway-symbol:hbox}' } [0x01 resolution 16-15 continue]
highway=motorway {name '${ref|highway-symbol:hbox}' | '${name}' } [0x01  resolution 22-18 continue]
highway=motorway {add oneway = yes; add bicycle = no; add foot = no; name '${ref|highway-symbol:hbox}' | '${name}' } [0x01 road_class=4 road_speed=7 resolution 23]

highway=motorway_link {set mkgmap:no_name=yes} [0x01 resolution 22-20 continue]
highway=motorway_link {add oneway = yes; add bicycle = no; add foot = no } [0x01 road_class=4 road_speed=6 resolution 23]



#DROGI SZYBKIEGO RUCHU
highway=trunk {set  mkgmap:no_name=yes } [0x02 resolution 16-15 continue]
highway=trunk { name '${ref}' } [0x02 resolution 22-18 continue]
highway=trunk {add oneway = yes; add bicycle = no; add foot = no; name '${name} ${ref}' | '${ref}' | '${name}' } [0x02 road_class=4 road_speed=5 resolution 23]

highway=trunk_link {set mkgmap:no_name=yes}  [0x02  resolution 22-20 continue]
highway=trunk_link {add oneway = yes; add bicycle = no; add foot = no }  [0x02 road_class=4 road_speed=4 resolution 23]



# to są jakieś niepolskie drogi podobne do dróg szybkiego ruchu
highway=* & highway!=construction & motorroad=yes  {add bicycle = no; add foot = no}
highway=* & highway!=construction & motorroad=yes [0x02 road_class=4 road_speed=4 resolution 15]


#DROGI PRIMARY

highway=primary {set mkgmap:no_name=yes;} [0x11011 resolution 16-15 continue]

highway=primary {set mkgmap:no_name=yes; } [0x03  resolution 18-18 continue]

#nie wyswietlamy REF na mostach
highway=primary & bridge=yes {name '${name}'} [0x03 road_class=3 road_speed=4 resolution 20]

highway=primary {name '${ref|highway-symbol:box}'} [0x03  resolution 20-20 continue]
highway=primary {name '${name}' | '${ref|highway-symbol:box}'} [0x03 road_class=3 road_speed=4 resolution 21]

highway=primary_link {set mkgmap:no_name=yes} [0x11011 resolution 16-16 continue]
highway=primary_link {set mkgmap:label:1=' ';  addlabel '${name}' | '${ref}' } [0x03 road_class=3 road_speed=3 resolution 18]
                                                                                      
#DROGI SECONDARY
#chodzi o to, zeby na level 20 nie wyswietlac w miastach nazw ulic a poza miastami
#wyswietlac ref
highway=secondary {set mkgmap:no_name=yes} [0x11010 resolution 16-16 continue]
highway=secondary {set mkgmap:no_name=yes} [0x04 resolution 18-18 continue]
highway=secondary & name!=* {name '${ref|highway-symbol:oval}'}  [0x04  resolution 20-20 continue]
highway=secondary & name=* {set mkgmap:no_name=yes}  [0x04  resolution 20-20 continue]

#nie wyswietlamy REF na mostach
highway=secondary & bridge=yes  {name '${name}'}  [0x04 road_class=2 road_speed=3 resolution 21]

highway=secondary  {name '${ref|highway-symbol:oval}'}  [0x1101a  resolution 21-21 continue]
highway=secondary  {name '${name}' | '${ref|highway-symbol:oval}';}  [0x04 road_class=2 road_speed=3 resolution 22]

highway=secondary_link {set mkgmap:label:1=' '; addlabel '${name}' | '${ref}'} [0x04 road_class=2 road_speed=2 resolution 18]


#DROGI TERTIARY

highway=tertiary {set mkgmap:no_name=yes} [0x1101d resolution 18-16 continue]
highway=tertiary {set mkgmap:no_name=yes} [0x1101b resolution 20-20 continue]
highway=tertiary {set mkgmap:no_name=yes} [0x1101b resolution 21-21 continue]
highway=tertiary {set mkgmap:no_name=yes} [0x05 resolution 22-22 continue]
highway=tertiary {name '${name}'} [0x05 road_class=1 road_speed=3 resolution 23]

highway=tertiary_link {set mkgmap:no_name=yes} [0x1101b resolution 22-20 continue]
highway=tertiary_link [0x05 road_class=1 road_speed=2 resolution 23]


